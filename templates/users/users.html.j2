{% extends "header.html.j2" %}
{% block page_name %}Benutzer{% endblock %}
{% block content %}
    <form method="post">
        <input type="submit" name="new" value="Neuer Benutzer">
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>Benutzername</th>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Geburtstag</th>
            <th>Aktionen</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.last_name }}</td>
                <td>{{ user.birthday }}</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="username" value="{{ user.username }}">
                        <input type="submit" name="modify" value="Ändern">
                        <input type="submit" name="delete" value="Löschen">
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}