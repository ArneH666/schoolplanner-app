{% extends "bases/header.html.j2" %}
{% block page_name %}Login{% endblock %}
{% block content %}
    {% if data_incorrect %}
    	<p style="color: red">Benutzername oder Password ist falsch.</p>
    {% endif %}
     
    <form id="login" method="post">
    <div class="header">
        <h1>EduSync</h1>
        <img class="logo" src="../static/images/EDUSYNC_LOGO.ico" alt="EduSync Logo">
    </div>
        <div class="headingsContainer">
            <h3>Sign in</h3>
            <p>Sign in with your username and password</p>
        </div>
        <div class="mainContainer">
            <label>
                <p>Benutzername</p>
                <input name="username" placeholder="Benutzername" type="text" required>
            </label>
            <label>
                <p>Passwort</p>
                <input name="password"placeholder="Password" type="password" required>
            </label>
            <div class="subcontainer">
                <label>
                  <input type="checkbox" name="remember"> Remember me
                </label>
                <p class="forgotpsd"> <a href="#">Forgot Password?</a></p>
            </div>
            <br>
            <button type="submit">Login</button>
        </div>
    </form>
{% endblock %}